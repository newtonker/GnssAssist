<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/feedback_record_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15.0dp"
        android:textColor="@color/feedback_black"
        android:textSize="20.0sp" />

    <TextView
        android:id="@+id/feedback_record_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/feedback_record_content"
        android:layout_marginLeft="15.0dp"
        android:paddingBottom="10.0dp"
        android:textColor="@color/feedback_gray" />

</RelativeLayout>